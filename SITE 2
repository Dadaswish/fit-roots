<!-- ====== JS: pricing + “Add to Cart” routing ====== -->
<script>
  const map = {
    women:  { sizeSel:'#size-women',  qtySel:'#qty-women',  priceEl:'#price-women',
              links:{ "28.99":"REPLACE_WITH_SHOPIFY_8OZ_LINK_WOMEN", "47.99":"REPLACE_WITH_SHOPIFY_16OZ_LINK_WOMEN" } },
    lung:   { sizeSel:'#size-lung',   qtySel:'#qty-lung',   priceEl:'#price-lung',
              links:{ "28.99":"REPLACE_WITH_SHOPIFY_8OZ_LINK_LUNG",  "47.99":"REPLACE_WITH_SHOPIFY_16OZ_LINK_LUNG" } },
    gorilla:{ sizeSel:'#size-gorilla',qtySel:'#qty-gorilla',priceEl:'#price-gorilla',
              links:{ "28.99":"REPLACE_WITH_SHOPIFY_8OZ_LINK_GORILLA","47.99":"REPLACE_WITH_SHOPIFY_16OZ_LINK_GORILLA" } }
  };

  function formatUSD(n){ return Number(n).toFixed(2); }

  // Update totals on change
  Object.keys(map).forEach(k=>{
    const size = document.querySelector(map[k].sizeSel);
    const qty  = document.querySelector(map[k].qtySel);
    const out  = document.querySelector(map[k].priceEl);
    function refresh(){
      const total = parseFloat(size.value) * Math.max(1, parseInt(qty.value||1));
      out.textContent = '$' + formatUSD(total);
    }
    size.addEventListener('change', refresh);
    qty.addEventListener('input', refresh);
    refresh();
  });

  function checkout(key){
    const cfg = map[key];
    const sizeVal = document.querySelector(cfg.sizeSel).value;
    const qtyVal  = Math.max(1, parseInt(document.querySelector(cfg.qtySel).value||1));
    const baseLink = cfg.links[sizeVal];

    if(!baseLink || baseLink.startsWith('REPLACE_WITH_SHOPIFY')){
      // Placeholder behavior until you add real Shopify links:
      alert(`Added ${qtyVal} × ${sizeVal === "28.99" ? "8oz" : "16oz"} to cart. (Connect Shopify link in the code to complete checkout.)`);
      return;
    }
    // If you have real Shopify “Buy Button” or direct checkout links per variant,
    // you can pass quantity via a query param if your link supports it:
    // window.location.href = `${baseLink}?quantity=${qtyVal}`;
    window.location.href = baseLink;
  }

  // Simple “Save” (persists choice in localStorage)
  function saveChoice(key){
    const sizeVal = document.querySelector(map[key].sizeSel).value;
    const qtyVal  = document.querySelector(map[key].qtySel).value;
    localStorage.setItem(`fitroots_${key}`, JSON.stringify({size:sizeVal, qty:qtyVal}));
    const btn = document.activeElement;
    btn.textContent = 'Saved ✓'; setTimeout(()=>btn.textContent='Save', 1400);
  }
  window.saveChoice = saveChoice;
  window.checkout = checkout;
</script>

