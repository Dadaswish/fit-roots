    </select>
  </div>

  <div class="quantity">
    <label for="quantity">Quantity:</label>
    <input type="number" id="quantity" value="1" min="1" onchange="updatePrice()">
  </div>

  <div class="price-display">
    Total: $<span id="total">28.99</span>
  </div>

  <button onclick="addToCart()">Add to Cart</button>
