<script>
function updatePrice() {
  const size = parseFloat(document.getElementById('size').value);
  const qty = parseInt(document.getElementById('quantity').value);
  const total = (size * qty).toFixed(2);
  document.getElementById('total').innerText = total;
}

function addToCart() {
  const sizeText = document.getElementById('size').selectedOptions[0].text;
  const qty = document.getElementById('quantity').value;
  const total = document.getElementById('total').innerText;
  alert(`${qty} Ã— ${sizeText} added to cart (Total: $${total})`);
  // ðŸ”— Later, you can replace this alert with Shopify checkout link
}
</script>

